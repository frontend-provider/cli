{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "pretty": true,
    "moduleResolution": "node",
    // https://github.com/tsconfig/bases#node-12-tsconfigjson
    "target": "es2019",
    "lib": [
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false, // Needed to compile tap and ansi-escapes
    "composite": true
  }
}
