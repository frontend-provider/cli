{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "pretty": true,
    "moduleResolution": "node",
    "target": "es2018",
    "lib": ["ES2018", "ES2019", "dom"],
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false, // Needed to compile tap and ansi-escapes
    "composite": true
  }
}
