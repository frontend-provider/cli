{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Tap Current File",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/node_modules/.bin/tap",
      "args": [
        "${relativeFile}",
        "-Rspec",
        "--timeout=300",
        "--node-arg=-r",
        "--node-arg=ts-node/register"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current File",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["${relativeFile}"]
    }
  ]
}
